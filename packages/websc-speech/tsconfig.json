{
  "compilerOptions": {
    "module": "es6",
    "moduleResolution": "node",
    "target": "es5",
    "allowJs": true,
    "lib": [
      "es2016",
      "dom",
      "es5"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noLib": false,
    "rootDir": "./lib",
    "declaration": true,
    "sourceMap": false,
//    "sourceRoot": "./lib",
    "outDir": "./build",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true
  },
  "include": [
    "lib",
  ],
  "exclude": [
    "node_modules",
  ]
}
